    c=input(a+": ")
    c=c.lower()
    if c=="c":
        print("Bot: 1st mode")
        p2=random.choice(l)
        print(p2)
    else:
        print("Bot: 2nd mode")
        n=input("Bot: Enter 2nd player name ")
        print("Play it's 2nd players turn")
        print("-------------")
        print("| 1 | 2 | 3 |")
        print("-------------")
        print("| 4 | 5 | 6 |")
        print("-------------")
        print("| 7 | 8 | 9 |")
        print("-------------")
        p2=int(input(n+":"))
    while True:
        if p2==1:
            c1="O"
        elif p2==2:
            c2="O"
        elif p2==3:
            c3="O"
        elif p2==4:
            c4="O"
        elif p2==5:
            c5="O"
        elif p2==6:
            c6="O"
        elif p2==7:
            c7="O"
        elif p2==8:
            c8="O"
        elif p2==9:
            c9="O"
        print("----------")
        print("|",c1,"|",c2,"|",c3,"|")
        print("----------")
        print("|",c4,"|",c5,"|",c6,"|")
        print("----------")
        print("|",c7,"|",c8,"|",c9,"|")
        print("----------")
        b=l.index(p2)
        l.pop(b)
        p1=int(input(a+": "))
        c=l.index(p1)
        l.pop(c)
        if p1==1:
            c1="X"
        elif p1==2:
            c2="X"
        elif p1==3:
            c3="X"
        elif p1==4:
            c4="X"
